{
  "name": "auracare-backend",
  "version": "1.0.0",
  "description": "AuraCare ICU Patient Monitoring System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:coverage": "jest --coverage",
    "setup": "node scripts/setup.js",
    "setup:dev": "chmod +x ./scripts/setup-dev.sh && ./scripts/setup-dev.sh",
    "create-indexes": "node scripts/createIndexes.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "prepare": "husky install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:prune": "docker system prune -a --volumes",
    "docker:exec": "docker exec -it auracare-app sh",
    "docker:mongo": "docker exec -it auracare-mongo mongo -u $MONGO_INITDB_ROOT_USERNAME -p $MONGO_INITDB_ROOT_PASSWORD",
    "generate:ssl": "chmod +x ./scripts/generate-ssl.sh && ./scripts/generate-ssl.sh"
  },
  "dependencies": {
    "@sentry/node": "^7.95.0",
    "@sentry/tracing": "^7.95.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "pdfkit": "^0.17.1",
    "rate-limit-redis": "^3.1.1",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "_moduleAliases": {
    "@": ".",
    "@config": "./config",
    "@controllers": "./controllers",
    "@middleware": "./middleware",
    "@models": "./models",
    "@routes": "./routes",
    "@services": "./services",
    "@utils": "./utils"
  }
}
